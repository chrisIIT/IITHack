<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#a8b9b0">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Event Data"
        android:id="@+id/createHeader"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/descID"
        android:text="Description"
        android:layout_below="@+id/nameID"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/createHeader"
        android:textSize="15sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:textAlignment="center"
        android:id="@+id/dateID"
        android:text="Date"
        android:layout_below="@+id/descID"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/descID"
        android:textSize="15sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:textAlignment="center"
        android:id="@+id/locID"
        android:text="Location"
        android:layout_below="@+id/dateID"
        android:layout_alignParentStart="true"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".EventData" />

