<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="5px"
    android:paddingRight="0px">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create"
        android:id="@+id/createHeader"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameID"
        android:layout_below="@+id/createHeader"
        android:layout_toStartOf="@+id/createHeader"
        android:layout_marginTop="52dp"
        android:hint="Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descID"
        android:hint="Description"
        android:layout_below="@+id/nameID"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/createHeader" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateID"
        android:hint="Date"
        android:layout_below="@+id/descID"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/descID" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/locID"
        android:hint="Location"
        android:layout_below="@+id/dateID"
        android:layout_alignParentStart="true" />
</RelativeLayout>
